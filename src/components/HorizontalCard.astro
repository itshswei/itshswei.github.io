---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
---

<div
  class="rounded-lg bg-base-100 hover:bg-gray-100 transition ease-in-out p-2"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[20%] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-2xl font-bold">
          {title}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
      </div>
  </a>
</div>
